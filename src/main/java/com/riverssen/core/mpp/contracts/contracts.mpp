//This class is instantiated once.
class HelloWorld {
    private PublicAddress owner
    private string        message

    public function HelloWorld() : void
    {
        message = "no message!"
        owner   = msg.sender
    }

    public function setMessage(string text) : void
    {
        if(owner == msg.sender)
            this.message = text
    }

    public function getMessage() : string
    {
        return message;
    }

    public function kill() : void
    {
        if(owner == msg.sender)
            destroy()
    }
}

class Messenger{
    private set         owner
    private mapped_set  messages
    
    public function Messenger() : void
    {
        this.owner      = new set
        this.messages   = new mapped_set

        owner.add(msg.sender)
    }

    public function sendMessage(String message, RSAPublicKey receiver) : void
    {
        messages.add(receiver, receiver.encrypt(message))
    }

    public function getMessages() : set
    {
        return messages.get(msg.sender)
    }

    public function addOwner() : void
    {
        if(owner.contains(msg.sender))
            owner.add(msg.sender)
    }

    public function kill() : void
    {
        if(owner.contains(msg.sender))
            destroy()
    }
}

